{
  "compilerOptions": {
  "target": "ES2019",
  "module": "ES2020",
  "moduleResolution": "Node",
  "strict": true,
  "rootDir": "public/ts",
  "outDir": "public/js",
  "allowJs": false,
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "skipLibCheck": true,
  "sourceMap": false
},
  "include": ["public/ts/**/*.ts"]
}